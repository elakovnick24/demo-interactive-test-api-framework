    "/api/test/users": {
      "get": {
        "tags": [
          "qa-test-controller"
        ],
        "summary": "Запрос списка идентификаторов пользователей по указанному критерию (в данном случае пол - `gender = male|female|any`)",
        "operationId": "usersUsingGET",
