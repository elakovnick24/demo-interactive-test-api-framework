        },
        "gender": {
          "type": "string",
          "enum": [
            "male",
            "female",
            "magic",
            "McCloud"
          ]
        },
        "id": {
          "type": "integer",
          "format": "int32"
        },
        "name": {
          "type": "string"
        },
